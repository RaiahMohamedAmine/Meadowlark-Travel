<div class="weatherWidget">
    {{#each partials.weather.locations}}
        <div class="location"> 
            <h3> {{name}}</h3>
            <a href="{{forecasturl}}" >
                <img src="{{iconUrl}}" alt="{{weather}}"/>
                {{weather}} , {{temp}}
            </a>
        </div>
    {{/each}}
    <small> 
        Source : <a href="http://www.wunderground.com">
            Weather
        </a>    
    </small>
</div>