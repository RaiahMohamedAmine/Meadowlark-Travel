<h1>Vacations</h1>
<hr>
<p>Currency:
    <a href="/set-currency/USD" class="currency {{currencyUSD}}">USD</a> |
    <a href="/set-currency/GBP" class="currency {{currencyGBP}}">GBP</a> |
    <a href="/set-currency/BTC" class="currency {{currencyBTC}}">BTC</a>
</p>

<div>
    {{#each vacations}}
        <div class="vacation">
            <h3>{{name}}</h3>
            <p>{{description}}</p>
            {{#if inSeason}}
                <span class="price"> {{price}} </span>
                <a href="/cart/add?sku={{sky}}" >Buy Now !!</a>
            {{else}}
                <span>We're Sorry but this vacation is not in season.</span>
                <a href="/notify-me-when-in-season?sku={{sku}}">Notify me when the vacation is in season</a>
            {{/if}}
        </div>
    {{/each}}
</div>
{{#unless vacations}}
    <h3> Nothing to shooow Sorry !</h3>
{{/unless}}